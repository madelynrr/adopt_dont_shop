<h3>Put a Pet up for Adoption</h3>

<%= form_tag "/shelters/#{@shelter.id}/pets" do %>
  <%= label_tag :image %>
  <%= text_field_tag :image %>

  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :description %>
  <%= text_field_tag :description %>

  <%= label_tag :age %>
  <%= text_field_tag :age %>

  <%= label_tag :sex %>
  <%= text_field_tag :sex %>

  <% label_tag :adoption_status %>
  <% text_field_tag :adoption_status %>

  <%= submit_tag "Create Pet Profile" %>

<% end %>
