<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
<h3>Edit <%= link_to @pet.name, "/pets/#{@pet.id}" %>'s Profile</h3>


  <%= label_tag :image %>
  <%= text_field_tag :image %>

  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :description %>
  <%= text_field_tag :description %>

  <%= label_tag :age %>
  <%= text_field_tag :age %>

  <%= label_tag :sex %>
  <%= text_field_tag :sex %>

  <%= submit_tag "Update Pet Profile" %>

<% end %>
