<%= form_tag "/shelters/#{@shelter.id}", method: :patch do %>

<section class="edit-form">
  <h3>Edit <%= link_to @shelter.name, "/shelters/#{@shelter.id}" %> Information</h3>

  <%= label_tag :name %>
  <%= text_field_tag :name, nil, placeholder: @shelter.name %>

  <%= label_tag :address %>
  <%= text_field_tag :address, nil, placeholder: @shelter.address %>

  <%= label_tag :city %>
  <%= text_field_tag :city, nil, placeholder: @shelter.city %>

  <%= label_tag :state %>
  <%= text_field_tag :state, nil, placeholder: @shelter.state %>

  <%= label_tag :zip %>
  <%= text_field_tag :zip, nil, placeholder: @shelter.zip %>
  <br></br>

  <%= submit_tag "Update Shelter" %>

<% end %>
</section>
