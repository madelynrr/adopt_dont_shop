<h3><%= link_to @shelter.name, "/shelters/#{@shelter.id}" %> Pets</h3>
<% @pets.each do |pet| %>
  <%= image_tag pet.image %>
  <h2>Name: <%= link_to pet.name, "/pets/#{pet.id}" %></h2>
  <p>Age: <%= pet.age  %></p>
  <p>Sex: <%= pet.sex %></p>
  <%= link_to "Edit #{pet.name}'s Profile", "/pets/#{pet.id}/edit" %></br>
  <%= link_to "Delete #{pet.name}'s Profile", "/pets/#{pet.id}", method: :delete %>
<% end %>

<%= link_to "Add a Pet", "/shelters/#{@shelter.id}/pets/new" %>
